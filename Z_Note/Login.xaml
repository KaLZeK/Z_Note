<Window x:Class="Z_Note.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Z_Note"
        mc:Ignorable="d"
        Title="Login"  Height="250" Width="300" ResizeMode="NoResize">
    <Canvas>
            <Grid Height="200" Width="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Canvas Grid.Row="3">
                <Button  Name="Start" Canvas.Left="60" Canvas.Top="10" Content="登陆" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Click="Start_Click"  />
                <Button Name="Cancel" Canvas.Right="60" Canvas.Top="10" Content="取消" HorizontalAlignment="Left" VerticalAlignment="Top" Width="40" Click="Cancel_Click" />
            </Canvas>
 
        </Grid>
    </Canvas>
</Window>
